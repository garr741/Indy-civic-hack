    <!-- ko ifnot: loadWizard -->
    <div id = "content">
      <!-- ko if: onPageZero -->
      <div>
        <h1>Welcome to the IPS magnet application!</h1>
        <h1>Have you already started your application?</h1>
        <button type="button" class="btn btn-default" data-bind="click: function() { toPage(1); }">Yes</button>
        <button type="button" class="btn btn-default" data-bind="click: function() { toPage(3); startWizard(); }">No</button>
      </div>
      <!-- /ko -->
      <!-- ko if: onPageOne -->
      <div>
        <h1>Welcome back!</h1>
